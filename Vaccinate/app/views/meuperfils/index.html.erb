<p id="notice"><%= notice %></p>

<h1>Meuperfils</h1>
<div style="overflow: auto; width: 1250px; height: 400px; border:solid 1px; position:absolute; left: 10px; top: 130px">
  <table border="2" width="30%" class="tabela" style="width:800px">

  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>Vacina tomada</th>
      <th>Deseja visualizar?</th>
      <th>Deseja editar?</th>
      <th>Deseja apagar?</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meuperfils.each do |meuperfil| %>
      <tr>
        <td><%= meuperfil.nome %></td>
        <td><%= meuperfil.idade %></td>
        <!-- <td><%= meuperfil.vacinas_tomadas %></td> -->


        <td><%= link_to 'Mostrar', meuperfil %></td>
        <td><%= link_to 'Editar', edit_meuperfil_path(meuperfil) %></td>
        <td><%= link_to 'Apagar', meuperfil, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>

    <% end %>
    <!-- teste para verificar se a @vacinas_tomadas estÃ¡ recebendo-->
<% @vacinas_tomadas.each do |x| %>
      <% x['vacina'] %>
      <%end%>
    <%= link_to 'Novo dependente', new_meuperfil_path %>
  </tbody>

<br>


</table>
</div>
